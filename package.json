{
  "name": "skipay",
  "version": "1.0.0",
  "private": true,
  "description": "A modern SkiFree-like endless downhill ski game with multiplayer",
  "scripts": {
    "dev": "concurrently -n client,server \"pnpm --filter @skipay/client dev\" \"pnpm --filter @skipay/server dev\"",
    "build": "pnpm --filter @skipay/shared build && pnpm --filter @skipay/server build && pnpm --filter @skipay/client build",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write \"**/*.{ts,tsx,json,md}\"",
    "test": "pnpm --recursive test",
    "typecheck": "pnpm --recursive typecheck",
    "db:migrate": "pnpm --filter @skipay/server db:migrate",
    "db:seed": "pnpm --filter @skipay/server db:seed",
    "db:studio": "pnpm --filter @skipay/server db:studio",
    "db:reset": "node scripts/reset-db.js",
    "generate:keys": "node scripts/generate-keys.js",
    "check:setup": "node scripts/check-setup.js",
    "clean": "pnpm --recursive exec rm -rf dist node_modules && rm -rf node_modules",
    "postinstall": "pnpm --filter @skipay/shared build && pnpm --filter @skipay/server prisma generate"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "prettier": "^3.2.5",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  }
}
