# Database
DATABASE_URL=postgresql://user:password@localhost:5432/skipay?schema=public

# JWT Keys (generate with: openssl genrsa -out private.pem 2048 && openssl rsa -in private.pem -pubout -out public.pem)
JWT_PRIVATE_KEY="-----BEGIN RSA PRIVATE KEY-----\n...\n-----END RSA PRIVATE KEY-----"
JWT_PUBLIC_KEY="-----BEGIN PUBLIC KEY-----\n...\n-----END PUBLIC KEY-----"
JWT_EXPIRATION=7d

# App
APP_ORIGIN=http://localhost:5173
NODE_ENV=development
PORT=3000

# Email (dev mode logs to console if not set)
SMTP_DSN=smtp://user:password@smtp.example.com:587
# Or leave empty for console logging in dev

# Match settings
MATCH_TICK_RATE=20
MATCH_MAX_PLAYERS=8

# Commit SHA (set by CI)
COMMIT_SHA=dev
